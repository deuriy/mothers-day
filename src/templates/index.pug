extends layouts/base

block content
  .hero-section
    .container
      .hero-section__inner
        .hero-section__col
          .hero-section__logo forayfoodies
          h1.hero-section__title Mumâ€™s best #[br.hidden-xs]recipe Challenge
          .hero-section__text
