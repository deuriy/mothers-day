.form-text
	width 100%
	height 70px
	padding-right 20px
	padding-left 20px
	border 1px solid rgba(0, 0, 0, 0.15)
	outline none
	background transparent
	font-size 20px
	@extend .transition
	
	@media $mdMinus
		padding-right 15px
		padding-left 15px
		height 54px
		font-size 16px
	
	&:focus
		border-color rgba(0, 0, 0, .5)