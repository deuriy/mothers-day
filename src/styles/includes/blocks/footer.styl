.footer
	padding-top 26px
	padding-bottom 26px
	background var(--dark)
	color var(--beige)
	font-size 24px
	line-height 1.34
	font-family var(--secondary-font)
	letter-spacing 0.07em
	text-align center
	text-transform uppercase
	
	@media $mdMinus
		padding-top 22px
		padding-bottom 22px
		font-size 21px
	
	@media $smMinus
		font-size 18px
	
	@media $xs
		padding-top 20px
		padding-bottom 20px
		font-size 17px
	
	@media $xxs
		padding-top 15px
		padding-bottom 15px
		font-size 16px