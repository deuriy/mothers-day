.hero-section
	&__inner
		display grid
		grid-template-columns repeat(2, 1fr)
		gap 40px
		padding-top 50px
		padding-bottom 50px
		
		@media $mdMinus
			padding-top 35px
			padding-bottom 40px
		
		@media $xs
			grid-template-columns 100%
			padding-top 30px
			padding-bottom 30px
		
		@media $xxs
			padding-top 20px
			padding-bottom 20px
	
	&__collage
		@media $smPlus
			margin-left auto
		
	&__logo
		margin-bottom 5.75em
		font-family var(--secondary-font)
		font-size 24px
		line-height 1.34
		letter-spacing 0.07em
		text-transform uppercase
		
		@media $mdMinus
			font-size 21px
		
		@media $smMinus
			margin-bottom 4em
			font-size 18px
		
		@media $xs
			margin-bottom 2.5em
			font-size 17px
			
		@media $xxs
			margin-bottom 1.2em
			font-size 16px
	
	&__title
		margin-bottom 0.34em
		font-weight 400
		font-family var(--secondary-font)
		font-size 60px
		line-height 99.4%
		text-transform capitalize
		
		@media $mdMinus
			font-size 54px
		
		@media $smMinus
			font-size 48px
		
		@media $xs
			font-size 42px
		
		@media $xxs
			font-size 30px
	
	&__text
		margin-bottom 2.5em
		opacity 0.7
		font-size 16px
		line-height 1.625
		text-transform capitalize
		
		@media $mdMinus
			font-size 15px
		
		@media $smMinus
			margin-bottom 2em
		
		@media $xs
			margin-bottom 1.5em
	
	&__list
		margin-bottom 40px
		
		@media $smMinus
			margin-bottom 30px
		
		@media $xxs
			margin-bottom 20px
	
	&__btn-wrapper
		@media $xxs
			display grid
			grid-template-columns 100%