.contact-form
	&__title
		margin-bottom 0.6em
	
	&__fields
		margin-bottom 44px
		
		@media $smMinus
			margin-bottom 20px
	
	&__row
		margin-bottom 20px
		
		@media $xxs
			margin-bottom 15px
		
		&:last-child
			margin-bottom 0
		
		&--two-col
			display grid
			grid-template-columns repeat(2, 1fr)
			gap 20px
			align-items end
			
			@media $xxs
				grid-template-columns 100%
				gap 15px
	
	&__label
		margin-bottom 4px
	
	&__actions
		@media $xxs
			display grid
			grid-template-columns 100%
				

@keyframes fadeInLeft
	from
		opacity 0
		transform translate3d(-100%, 0, 0)

	to
		opacity 1
		transform translate3d(0, 0, 0)